<div class="links-under-form-wrapper">
  <%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name), class: 'links-under-form' %><br />
  <% end %>

  <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Sign up", new_registration_path(resource_name), class: 'links-under-form' %><br />
  <% end %>

  <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れましたか?", new_password_path(resource_name), class: 'links-under-form' %><br />
  <% end %>

  <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールが届かない場合はこちら", new_confirmation_path(resource_name), class: 'links-under-form' %><br />
  <% end %>

  <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "アカウントのロックを解除する", new_unlock_path(resource_name), class: 'links-under-form' %><br />
  <% end %>

  <%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
  <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), class: 'links-under-form' %><br />
  <% end %>
  <% end %>
</div>
